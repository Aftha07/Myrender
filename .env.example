# Database Configuration
# Railway/Render will automatically provide this when you add PostgreSQL
DATABASE_URL=postgresql://username:password@hostname:port/database

# Session Configuration
# Generate a secure random string for production
SESSION_SECRET=your-super-secure-session-secret-key-here

# Server Configuration
# Railway/Render will automatically set this
PORT=5000

# Environment
NODE_ENV=production

# Platform-specific (auto-generated by hosting providers)
RENDER_EXTERNAL_URL=https://your-app.onrender.com
RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app

# Optional: If you need Replit OAuth integration
REPL_ID=your-repl-id
ISSUER_URL=https://replit.com
REPLIT_DOMAINS=your-domain.replit.app